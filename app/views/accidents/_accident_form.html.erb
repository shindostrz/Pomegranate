<%= form_for accident, remote: true do |f| %>
  <%= f.text_field :latitude, placeholder: "Latitude", required: true %><br>
  <%= f.text_field :longitude, placeholder: "Longitude", required: true %><br>
  <%= f.text_area :details, placeholder: "details", rows: 3, cols: 22, required: true %><br>
  <%= f.url_field :news_url, placeholder: "Optional news article link" %><br>
  <%= f.submit "Add", id: "accident_button" %>
<% end %>