<%= form_for accident, remote: true do |f| %>
  <%= f.text_field :latitude, placeholder: "Latitude", required: true %><br>
  <%= f.text_field :longitude, placeholder: "Longitude", required: true %><br>
  <%= f.text_area :details, placeholder: "details", rows: 8, cols: 30, required: true %><br>
  <%= f.label :accident_date %><br>
  <%= f.date_select :accident_date, :start_year => 2003, :end_year => 2013 %><br>
  <%= f.url_field :news_url, placeholder: "Optional news article link", size: 39 %><br>
  <%= f.submit "Add", id: "accident_button" %>
<% end %>